* {
    font-family: 'JetbrainsMono Nerd Font';
    font-size: 15px;

    min-height: 10px;

    border: none;
    border-radius: 10px;
}

window#waybar {
    border-radius: 0;
    /* background: linear-gradient(to left top, pink, skyblue); */
    /* background: hsl(356, 94%, 94%); */
    background: transparent;
}

window#waybar.hidden {
    opacity: .2;
}

#window {
    margin-top: 4px;
    padding-right: 10px;
    padding-left: 10px;

    transition: none;

    color: transparent;
    border-radius: 10px;
    background: transparent;
}

#tags {
    font-size: 4px;

    margin-top: 4px;
    margin-bottom: 4px;
    margin-left: 12px;

    transition: none;

    border-radius: 10px;
    background: #161320;
}

#tags button {
    font-size: 16px;

    transition: none;

    color: #b5e8e0;
    border-radius: 2px;
    background: transparent;
}

#tags button.occupied {
    font-size: 4px;

    transition: none;

    color: #f28fad;
    background: transparent;
}

#tags button.focused {
    color: #abe9b3;
    border-top: 2px solid #abe9b3;
    border-bottom: 2px solid #abe9b3;
}

#tags button:hover {
    transition: none;

    color: #fae3b0;
    color: #e8a2af;
    border-color: #e8a2af;
    box-shadow: inherit;
    text-shadow: inherit;
}

#tags button.focused:hover {
    color: #e8a2af;
}

